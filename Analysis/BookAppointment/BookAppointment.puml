@startuml
left to right direction
skinparam style strictuml

actor Customer

boundary "Appointment Booking Page" as BookingUI
control "Appointment Controller" as AppointmentController
entity "Service" as ServiceEntity
entity "Appointment" as AppointmentEntity

Customer --> BookingUI : select service/date/time
BookingUI --> AppointmentController : submitBooking()

AppointmentController --> ServiceEntity : checkAvailability()
AppointmentController --> AppointmentEntity : createAppointment()

AppointmentController --> BookingUI : confirmation / error

@enduml
